{
  "printWidth": 120,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "embeddedLanguageFormatting": "auto",
  "importOrder": [
    "^components/(.*)$",
    "^pages/(.*)$",
    "^interceptors/(.*)$",
    "^environments/(.*)$",
    "^services/(.*)$",
    "^guards/(.*)$",
    "^[./]"
  ],
  "importOrderParserPlugins": ["typescript", "decorators-legacy"],
  "singleAttributePerLine": true,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": ["index-(lock|test).html", "index.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.component.html"],
      "options": {
        "printWidth": 120,
        "parser": "angular",
        "singleAttributePerLine": false
      }
    }
  ]
}
